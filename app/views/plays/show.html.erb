<div class="page-header">
  <%= link_to plays_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_play_path(@play), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show play</h1>
</div>

<dl class="dl-horizontal">
  <dt>Team:</dt>
  <dd><%= @play.team %></dd>

  <dt>Play type:</dt>
  <dd><%= @play.play_type %></dd>

  <dt>Direction:</dt>
  <dd><%= @play.direction %></dd>

  <dt>Yards:</dt>
  <dd><%= @play.yards %></dd>

</dl>
